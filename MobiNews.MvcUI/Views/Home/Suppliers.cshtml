@model MobiNews.MvcUI.Models.SupplierModel
@{
    ViewBag.Title = "Suppliers";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Supplier ID</th>
                <th>Supplier Name</th>
                <th>Notification URL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in @Model.Suppliers)
            {
                <tr>
                    <th scope="row">@supplier.SupplierID</th>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.NotificationURL</td>
                    <td><a data-value="@supplier.SupplierID" href="javascript:void(0)" class="btnEdit">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h3>Add New Supplier:</h3>
<div class="row">
    <div class="container">
        <div class="form-group">
            <label for="name">Supplier Name</label>
            @Html.TextBoxFor(tb => tb.SupplierName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="notificationUrl">Notification URL</label>
            @Html.TextBoxFor(tb => tb.NotificationUrl, new { @class = "form-control" })
        </div>
        <button type="button" class="btn btn-primary btnAddSupplier">Add Supplier</button>
    </div>
</div>
<div class="clearfix"></div>

@section Scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var id = 0;

            $(document).on('click', '.btnAddSupplier', function () {
                $(this).load("@Url.Action("AddSupplier")", {
                    SupplierName: $("#SupplierName").val(),
                    NotificationUrl: $("#NotificationUrl").val()
                });

                window.location.reload(true);
            });

            $(document).on('click', '.btnEdit', function () {
                alert("sorry not implemented yet, can't do that much in 2 hours!");
            });
        });
    </script>
}

